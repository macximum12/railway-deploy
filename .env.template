# Internal Audit Tracker Configuration Template
# Copy this file to .env and customize for your deployment

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# Flask Secret Key (REQUIRED)
# Generate a strong secret key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-this-to-a-random-secret-key-minimum-32-characters

# Flask Environment (REQUIRED)
# Options: development, production
FLASK_ENV=production

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Host to bind to (optional, default: 0.0.0.0)
HOST=0.0.0.0

# Port to listen on (optional, default: 5000)
PORT=5000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL (optional, default: SQLite)
# SQLite: sqlite:///audit_findings.db
# PostgreSQL: postgresql://user:password@host:port/dbname
# MySQL: mysql://user:password@host:port/dbname
DATABASE_URL=sqlite:///audit_findings.db

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Session timeout in seconds (optional, default: 1800 = 30 minutes)
SESSION_TIMEOUT=1800

# Password expiry in days (optional, default: 90)
PASSWORD_EXPIRY_DAYS=90

# Maximum login attempts before lockout (optional, default: 5)
MAX_LOGIN_ATTEMPTS=5

# Account lockout duration in seconds (optional, default: 900 = 15 minutes)
LOCKOUT_DURATION=900

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable Excel import feature (optional, default: true)
ENABLE_EXCEL_IMPORT=true

# Enable/disable user registration (optional, default: false)
ENABLE_USER_REGISTRATION=false

# Enable/disable password complexity requirements (optional, default: true)
ENABLE_PASSWORD_COMPLEXITY=true

# =============================================================================
# EMAIL CONFIGURATION (Future Feature)
# =============================================================================

# SMTP server configuration for email notifications
# SMTP_SERVER=smtp.example.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@example.com
# SMTP_PASSWORD=your-email-password
# SMTP_USE_TLS=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (optional, default: INFO)
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (optional, default: console only)
# LOG_FILE=/var/log/audit-tracker.log

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Maximum file upload size in bytes (optional, default: 16MB)
MAX_CONTENT_LENGTH=16777216

# Session cookie max size (optional, default: 4093)
SESSION_COOKIE_MAXSIZE=4093

# =============================================================================
# CLOUD DEPLOYMENT SPECIFIC
# =============================================================================

# These are typically set by the cloud platform automatically
# RAILWAY_PUBLIC_DOMAIN=your-app.railway.app
# HEROKU_APP_NAME=your-heroku-app
# RENDER_EXTERNAL_URL=https://your-app.onrender.com
